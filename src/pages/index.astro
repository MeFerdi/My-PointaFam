---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to PointaFam">
	
		<main>
			<h1>Welcome to <span class="text-gradient">PointaFam</span></h1>
			<p class="intro">
				PointaFam connects rural farmers with urban retailers, fostering a sustainable supply chain for fresh produce.
			</p>
			<p class="instructions">
				Get started by exploring the features and resources below:
			</p>
			<ul class="link-card-grid">
				<Card
					href="#"
					title="Farmers Listings"
					body="Browse and discover fresh produce directly from local farmers."
				/>
				<Card
					href="#"
					title="Retailer Partnerships"
					body="Connect with retailers in urban areas for efficient distribution."
				/>
				<Card
					href="#"
					title="Community Engagement"
					body="Join our community discussions on sustainable farming practices."
				/>
				<Card
					href="#"
					title="Learn More"
					body="Explore our documentation and resources for using PointaFam."
				/>
			</ul>
		</main>
	</template>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.intro {
		text-align: center;
		margin-bottom: 2rem;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.navbar {
		background-color: #333;
		color: #fff;
		padding: 10px 0;
	}

	.container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-size: 1.5rem;
		font-weight: bold;
	}

	.menu-btn {
		display: none; /* Initially hidden on larger screens */
		cursor: pointer;
	}

	.bar {
		width: 25px;
		height: 3px;
		background-color: #fff;
		margin: 5px 0;
		transition: 0.4s;
	}

	.nav-links ul {
		list-style: none;
		display: flex;
		gap: 20px;
	}

	.nav-links ul li a {
		color: #fff;
		text-decoration: none;
		font-size: 1.2rem;
		transition: 0.2s;
	}

	.nav-links ul li a:hover {
		color: #ffcc00;
	}
</style>
